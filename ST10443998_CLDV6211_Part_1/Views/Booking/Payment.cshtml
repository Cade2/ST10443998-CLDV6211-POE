@model ST10443998_CLDV6211_POE.Models.Payment

@{
    ViewData["Title"] = "Payment";
    var bookingId = ViewBag.BookingId;
}

<h2>Step 3: Enter Payment Details</h2>

<<form asp-action="Payment" method="post">
    <input type="hidden" name="customerId" value="@ViewBag.CustomerId" />
    <input type="hidden" name="eventId" value="@ViewBag.EventId" />

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentDate"></label>
        <input asp-for="PaymentDate" class="form-control" type="date" />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Complete Booking</button>
</form>
